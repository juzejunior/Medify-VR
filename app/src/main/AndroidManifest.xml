<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="br.com.spacerocket.medifyvr">

    <uses-feature
            android:glEsVersion="0x00020000"
            android:required="true"/> <!-- These permissions are used by Google VR SDK to get the best Google VR headset profiles. ! -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:largeHeap="true"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".ResultActivity">
        </activity>
        <activity android:name=".CatchBallSessionActivity">
        </activity>
        <activity android:name=".SessionActivity">
        </activity>
        <activity
                android:name=".SplashScreen"
                android:theme="@style/AppNew.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".MainActivity"
                android:theme="@style/AppNew"/>
    </application>

</manifest>